body{
	font-size:100%;
	background-color:#f2f2f2;
}

p{
	color:black;
	font-family:Helvetica;
}
h1{
	color:#8C2329;
	font-family:Georgia;
}
h2{
	color:blue;
	font-family:Verdana;
}
h3{
	color:green;
	font-family:Verdana;
}

.ListStyleOne {
  list-style: circle;
  font-family:Verdana;
}

.ListStyleTwo {
  list-style: square;
  font-family:Verdana;
}
.fa {
  padding: 20px;
  font-size: 30px;
  width: 50px;
  text-align: center;
  text-decoration: none;
  margin: 5px 2px;
}

.center {
  margin-left: auto;
  margin-right: auto;
}
.textcenter {
  text-align: center;
}
.shadows {
  text-shadow: 2px 2px #757876;
}
.keywords {
	color:red;
	font-weight:bold;
	text-decoration: underline;
}
.menu {
  position: fixed;
  left: 0px;
  width: 100px;
  border: 3px solid #73AD21;
  padding: 10px;
}
@media(min-width:720px){
 	.header{
      display:flex;
	  flex-direction:column;
    }
	.boxes{
      display:flex;
	  justify-content:center;
	 }
}
.header div{
	text-align:center;
  }
 .boxes div{
    border:1px #ccc solid;
    padding:10px;
  }
  
  .box1{
    flex-basis: 25%;
    order:2;
  }
  
  .box2{
    flex-basis: 25%;
    order:1;
  }
  
  .box3{
    flex-basis: 25%;
    order: 3;
  }
